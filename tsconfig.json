
{
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}

